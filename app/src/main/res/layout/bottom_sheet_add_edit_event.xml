<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurfaceContainerHigh"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <!-- Enhanced Header with drag handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="?attr/colorOnSurfaceVariant"
        android:alpha="0.4"
        android:layout_marginBottom="24dp" />

    <!-- Enhanced Title Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_title_hint"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxStrokeColor="?attr/colorPrimary"
        app:hintTextColor="?attr/colorPrimary"
        app:startIconDrawable="@drawable/ic_event"
        app:startIconTint="?attr/colorOnSurfaceVariant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurface"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Enhanced Date Selection Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDate"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/select_date"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:icon="@drawable/ic_event"
        app:iconTint="?attr/colorPrimary"
        app:iconSize="20dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="?attr/colorOutline" />

    <!-- Reminder Configuration Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="?attr/colorSurfaceContainerLow"
        android:padding="16dp"
        app:cornerRadius="12dp">

        <!-- Reminder Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_event"
                android:tint="?attr/colorPrimary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notify me"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotifyMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Reminder Offset Selector -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonReminderOffset"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="1 day before"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:layout_marginTop="12dp"
            android:gravity="start|center_vertical"
            app:icon="@drawable/ic_event"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:iconSize="18dp"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant" />

    </LinearLayout>

    <!-- Enhanced Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            android:paddingHorizontal="24dp"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/save"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            android:paddingHorizontal="32dp"
            app:icon="@drawable/ic_save"
            app:iconSize="18dp"
            app:iconTint="?attr/colorOnPrimary"/>

    </LinearLayout>
</LinearLayout>