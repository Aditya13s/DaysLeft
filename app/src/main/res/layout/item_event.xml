<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/event_card_background"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Enhanced Main Content Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Event Icon Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_event"
                    app:tint="?attr/colorOnSecondaryContainer" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Event Title and Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Birthday Party"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:importantForAccessibility="yes" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aug 14, 2025"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_marginTop="4dp"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

            <!-- Enhanced Days Left Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textDaysLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 days"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:minWidth="48dp"
                    android:gravity="center" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Enhanced Action Row with Material 3 buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Edit event"
                android:text="Edit"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:paddingHorizontal="16dp"
                android:minWidth="64dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="18dp"
                app:iconTint="?attr/colorPrimary"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.DaysLeft.Button.Delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="Delete event"
                android:text="Delete"
                android:textAllCaps="false"
                android:paddingHorizontal="16dp"
                android:minWidth="64dp"
                app:icon="@drawable/ic_delete" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>