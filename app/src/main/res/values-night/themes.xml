<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme with Material 3 dynamic colors -->
    <style name="Base.Theme.DaysLeft" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 Color System - Dark Theme -->
        <item name="colorPrimary">@color/material_dynamic_primary</item>
        <item name="colorOnPrimary">@color/material_dynamic_on_primary</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_on_primary_container</item>
        
        <item name="colorSecondary">@color/material_dynamic_secondary</item>
        <item name="colorOnSecondary">@color/material_dynamic_on_secondary</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/material_dynamic_on_secondary_container</item>
        
        <item name="colorTertiary">@color/material_dynamic_tertiary</item>
        <item name="colorOnTertiary">@color/material_dynamic_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/material_dynamic_on_tertiary_container</item>
        
        <item name="colorError">@color/material_dynamic_error</item>
        <item name="colorOnError">@color/material_dynamic_on_error</item>
        <item name="colorErrorContainer">@color/material_dynamic_error_container</item>
        <item name="colorOnErrorContainer">@color/material_dynamic_on_error_container</item>
        
        <item name="colorSurface">@color/material_dynamic_surface</item>
        <item name="colorOnSurface">@color/material_dynamic_on_surface</item>
        <item name="colorSurfaceVariant">@color/material_dynamic_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/material_dynamic_on_surface_variant</item>
        <item name="colorSurfaceContainer">@color/material_dynamic_surface_container</item>
        <item name="colorSurfaceContainerLow">@color/material_dynamic_surface_container_low</item>
        <item name="colorSurfaceContainerHigh">@color/material_dynamic_surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/material_dynamic_surface_container_highest</item>
        
        <item name="android:colorBackground">@color/material_dynamic_background</item>
        <item name="colorOnBackground">@color/material_dynamic_on_background</item>
        
        <item name="colorOutline">@color/material_dynamic_outline</item>
        <item name="colorOutlineVariant">@color/material_dynamic_outline_variant</item>
        
        <!-- Enable dynamic colors for supported devices -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
    </style>
</resources>